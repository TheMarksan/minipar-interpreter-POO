class Produto {
    STRING nome;
    INT categoria;

    VOID setDados(STRING n, INT cat) {
        this.nome = n;
        this.categoria = cat;
    }
}

class Usuario {
    INT produtos_comprados[10];
    INT n_comprados;

    VOID inicializar() {
        this.n_comprados = 0;
    }

    VOID adicionar_compra(INT produto_id) {
        this.produtos_comprados[this.n_comprados] = produto_id;
        this.n_comprados = this.n_comprados + 1;
    }

    INT verificar_comprou(INT produto_id) {
        INT i;
        for i = 0; i < this.n_comprados; i = i + 1 {
            if this.produtos_comprados[i] == produto_id {
                return 1;
            }
        }
        return 0;
    }
}

class Recomendador {
    VOID recomendar(Usuario user) {
        INT i;
        INT ja_comprou;
        
        print("Recomendacoes para voce:");
        
        for i = 0; i < 5; i = i + 1 {
            ja_comprou = user.verificar_comprou(i);
            if ja_comprou == 0 {
                print("Produto ID:");
                print(i);
            }
        }
    }
}

SEQ {
    Usuario user;
    user = new Usuario();
    user.inicializar();
    user.adicionar_compra(0);
    user.adicionar_compra(2);
    
    Recomendador rec;
    rec = new Recomendador();
    rec.recomendar(user);
}
