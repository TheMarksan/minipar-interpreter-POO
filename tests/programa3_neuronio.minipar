INT ativacao(FLOAT soma) {
    if soma >= 0 {
        return 1;
    }
    return 0;
}

class Neuronio {
    FLOAT input_val;
    FLOAT peso;
    FLOAT taxa;

    VOID setDados(FLOAT inp, FLOAT p, FLOAT t) {
        this.input_val = inp;
        this.peso = p;
        this.taxa = t;
    }

    VOID treinar() {
        INT iteracao;
        FLOAT soma;
        INT saida;
        INT output_desejado;
        FLOAT erro;
        
        output_desejado = 0;
        iteracao = 0;
        erro = 1;
        
        print("Iniciando treinamento");
        
        while iteracao < 10 {
            iteracao = iteracao + 1;
            
            soma = this.input_val * this.peso;
            saida = ativacao(soma);
            
            erro = output_desejado - saida;
            
            if erro != 0 {
                this.peso = this.peso + this.taxa * this.input_val * erro;
            }
            
            print("Iteracao:");
            print(iteracao);
            print("Saida:");
            print(saida);
        }
        
        print("Treinamento finalizado");
    }
}

SEQ {
    Neuronio n;
    n = new Neuronio();
    n.setDados(1, 0.5, 0.01);
    n.treinar();
}
