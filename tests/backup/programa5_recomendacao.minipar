STRING produtos_globais[16];
INT historico_usuario[16];
FLOAT saida_rede[16];
INT n_produtos_total;

VOID inicializar_produtos() {
    n_produtos_total = 16;
    
    produtos_globais[0] = "Smartphone";
    produtos_globais[1] = "Laptop";
    produtos_globais[2] = "Tablet";
    produtos_globais[3] = "Fones";
    produtos_globais[4] = "Camisa";
    produtos_globais[5] = "Jeans";
    produtos_globais[6] = "Jaqueta";
    produtos_globais[7] = "Sapatos";
    produtos_globais[8] = "Geladeira";
    produtos_globais[9] = "Micro-ondas";
    produtos_globais[10] = "Lavadora";
    produtos_globais[11] = "Ar-condicionado";
    produtos_globais[12] = "Ficcao";
    produtos_globais[13] = "Nao-ficcao";
    produtos_globais[14] = "Sci-fi";
    produtos_globais[15] = "Fantasia";
}

VOID codificar_historico() {
    STRING historico[4];
    historico[0] = "Smartphone";
    historico[1] = "Jeans";
    historico[2] = "Micro-ondas";
    historico[3] = "Ficcao";
    
    INT i;
    INT j;
    
    for i = 0; i < n_produtos_total; i = i + 1 {
        historico_usuario[i] = 0;
        for j = 0; j < 4; j = j + 1 {
            if produtos_globais[i] == historico[j] {
                historico_usuario[i] = 1;
            }
        }
    }
}

VOID processar_rede() {
    INT i;
    
    for i = 0; i < n_produtos_total; i = i + 1 {
        if historico_usuario[i] == 1 {
            saida_rede[i] = 0.2;
        } else {
            saida_rede[i] = 0.7;
        }
    }
}

VOID mostrar_recomendacoes() {
    print("=== Sistema de Recomendacao ===");
    print("Historico do usuario:");
    print("- Smartphone");
    print("- Jeans");
    print("- Micro-ondas");
    print("- Ficcao");
    
    print("");
    print("Produtos recomendados:");
    
    INT count_recomendacoes;
    count_recomendacoes = 0;
    INT i;
    
    for i = 0; i < n_produtos_total; i = i + 1 {
        if saida_rede[i] > 0.5 {
            if historico_usuario[i] == 0 {
                print("- " + produtos_globais[i] + " (score: " + saida_rede[i] + ")");
                count_recomendacoes = count_recomendacoes + 1;
            }
        }
    }
    
    if count_recomendacoes == 0 {
        print("Nenhuma recomendacao encontrada.");
    } else {
        print("");
        print("Total de recomendacoes: " + count_recomendacoes);
    }
}

VOID main() {
    inicializar_produtos();
    codificar_historico();
    processar_rede();
    mostrar_recomendacoes();
}

SEQ {
    main();
}