class Array {
    INT val0; INT val1; INT val2; INT val3;
    
    VOID init(INT v0, INT v1, INT v2, INT v3) {
        this.val0 = v0; 
        this.val1 = v1; 
        this.val2 = v2;
        this.val3 = v3;
    }
    
    INT getValue(INT index) {
        if index == 0 { return this.val0; }
        if index == 1 { return this.val1; } 
        if index == 2 { return this.val2; }
        if index == 3 { return this.val3; }
        return 0;
    }
}

VOID imprimirArray(Array arr) {
    print("Elementos do array:");
    print("arr[0] = " + arr.getValue(0));
    print("arr[1] = " + arr.getValue(1));
    print("arr[2] = " + arr.getValue(2));
    print("arr[3] = " + arr.getValue(3));
}

