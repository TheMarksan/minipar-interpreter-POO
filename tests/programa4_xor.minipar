INT xor_logico(INT a, INT b) {
    INT resultado;
    resultado = 0;
    
    if a == 0 {
        if b == 1 {
            resultado = 1;
        }
    }
    
    if a == 1 {
        if b == 0 {
            resultado = 1;
        }
    }
    
    return resultado;
}

SEQ {
    INT r1;
    INT r2;
    INT r3;
    INT r4;
    
    print("Testando porta XOR");
    
    print("0 XOR 0 =");
    r1 = xor_logico(0, 0);
    print(r1);
    
    print("0 XOR 1 =");
    r2 = xor_logico(0, 1);
    print(r2);
    
    print("1 XOR 0 =");
    r3 = xor_logico(1, 0);
    print(r3);
    
    print("1 XOR 1 =");
    r4 = xor_logico(1, 1);
    print(r4);
}
